{
    "name": "socialgest/laravel-instapago",
    "type": "library",
    "description": "Simple library for Instapago API in Laravel 5.*",
    "keywords": [
        "socialgest",
        "laravel-instapago"
    ],
    "homepage": "https://github.com/socialgest/laravel-instapago",
    "license": "MIT",
    "authors": [
        {
            "name": "Jos√© Martorano",
            "email": "joseenrique@socialgest.net",
            "homepage": "https://github.com/kikemarto",
            "role": "Developer"
        },
        {
            "name": "Angel Cruz",
            "email": "me@abr4xas.org",
            "homepage": "https://abr4xas.org",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php": "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "guzzlehttp/guzzle": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Socialgest\\Instapago\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Socialgest\\Instapago\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },        
        "laravel": {
            "providers": [
                "Socialgest\\Instapago\\InstapagoServiceProvider::class"
            ],
            "aliases": {
                "Instapago": "Socialgest\\Instapago\\Facades\\Instapago::class"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
